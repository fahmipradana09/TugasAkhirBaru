<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="54dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            app:srcCompat="@drawable/logo_ricebox" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvKeranjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/Keranjang"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/LLMenuKeranjang"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvKeranjang">

        <ImageView
            android:id="@+id/ivKeranjangMakanan"
            android:layout_width="90dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/ayamgoreng" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHargaMakanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/black"
                android:shadowRadius="2"
                android:text="@string/HargaMakanan"
                android:textColor="@color/yellow"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvJudulMakanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DummyNamaMakanan"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/custom"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2sp"
                    android:maxLines="6"
                    android:text="@string/DummyCustom"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/minesCountMenu"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/roundedsquare_for_buttonadd"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/remove_icon"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/numberCountDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="@string/numberCount"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/addCountMenu"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/roundedsquare_for_buttonadd"
                    android:src="@drawable/add_icon"
                    android:textColor="@color/black" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAddCart"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:text="@string/beli"
                android:padding="0dp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/black"
                android:background="@drawable/roundedsquare_for_buttonadd"
                android:layout_marginStart="2dp"/>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>